<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Recycler View -->
    <com.app.babyapp.customviews.AdvancedRecyclerView
        android:id="@+id/advancedRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <!-- Load More -->
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/loadMoreCon"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true">

        <com.github.ybq.android.spinkit.SpinKitView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            style="@style/SpinKitView.Small.Circle"
            app:SpinKit_Color="@color/gray"
            />

    </RelativeLayout>

    <!-- Shadow -->
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/shadowCon"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:elevation="100dp"
        android:background="@drawable/rectangle_black_deep_shadow" />

</RelativeLayout>